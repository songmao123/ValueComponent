<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransparentTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.FullScreenTheme" parent="AppTheme.TransparentTheme" />

    <style name="Toolbar.WhiteIconTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>
</resources>
